@model Agenda.Models.Tarea
@{
    ViewData["Title"] = "Añadir una tarea";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="formulario">
    <form asp-action="Create" method="post" asp-controller="Tarea">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-floating">
            <input asp-for="Titulo" class="form-control" />
            <label for="floatingInput">Titulo</label> 
            <span asp-validation-for="Titulo" class="text-danger"></span> 
        </div>
        <div class="form-floating">
            <input asp-for="Descripcion" class="form-control" />
            <label for="floatingInput" class="control-label">Descripcion</label>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="fecha" type="datetime-local" class="form-control" />
            <span asp-validation-for="fecha" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Fin" type="datetime-local" class="form-control" />
            <span asp-validation-for="Fin" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <input type="submit" value="Añadir" class="btn btn-primary" />
        </div>
    </form>
</div>

