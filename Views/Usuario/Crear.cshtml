@model Agenda.Models.Usuario
@{
	ViewData["Title"] = "Registrar Usuarios";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="formulario">
    <form asp-action="Create" method="post" asp-controller="Usuario">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-floating">
            <input asp-for="Nombre" class="form-control" />
            <label for="floatingInput">Nombre</label>
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Contraseña" class="form-control" />
            <label for="floatingInput" class="control-label">Contraseña</label>
            <span asp-validation-for="Contraseña" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="ConfirmarContraseña"  class="form-control" />
            <label for="floatingInput" class="control-label">Repetir contraseña</label>
            <span class="text-danger">@(ViewBag.Error != null ? ViewBag.Error : "")</span>
        </div>
        <div class="form-group mt-3">
            <input type="submit" value="Registrar" class="btn btn-primary" />
        </div>
    </form>
</div>